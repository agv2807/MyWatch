<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.watch.view.WatchView
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <com.example.watch.view.WatchView
        app:strokeColor="@color/black"
        app:circleBackground="@color/white"
        app:hourHandColor="@color/black"
        app:minuteHandColor="@color/black"
        app:secondsHandColor="@color/black"
        app:numbersColor="@color/black"
        app:pointsColor="@color/black"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.example.watch.view.WatchView
        app:strokeColor="@color/white"
        app:hourHandColor="@color/blue"
        app:minuteHandColor="@color/green"
        app:secondsHandColor="@color/red"
        app:circleBackground="@color/white"
        app:pointsColor="@color/blue"
        android:layout_width="150dp"
        android:layout_height="150dp" />

</LinearLayout>